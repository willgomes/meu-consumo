@using Microsoft.Extensions.Localization
@using Resources

@inject IStringLocalizer<Resource> Localizer

<MudPaper Class="py-3 d-flex flex-column" Style="height: 100vh;" Elevation="0">
    <MudNavMenu Color="Color.Secondary" Class="flex-grow-1">
        <MudImage Fluid="true" Src="./images/meu-consumo.png" Alt="Imagem contendo um boneco segurando uma lupa e uma prancheta com vários de supermercado ao redor" Class="rounded-lg"/>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-primary">
            @Localizer["AppDescription"]
        </MudText>
        <MudDivider Class="my-2"/>
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">@Localizer["Home"]</MudNavLink>
        <MudNavLink Href="/product" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.ShoppingBasket">@Localizer["Products"]</MudNavLink>
    </MudNavMenu>

    <MudDivider />
    <MudNavMenu Color="Color.Secondary" Class="mt-auto">
        <MudNavLink Href="/about" Icon="@Icons.Material.Filled.Info">@Localizer["About"]</MudNavLink>
    </MudNavMenu>
</MudPaper>
