@page "/product-form"

<MudGrid Class="px-4 py-4">
    <MudItem xs="12" sm="12" md="12" lg="12" xl="12">
        <MudText Typo="Typo.h6" Class="px-4">Adicionar produto</MudText>
    </MudItem>
    <MudItem xs="12" sm="12" md="12" lg="12" xl="12">
        <MudCard>
            <MudForm Model="@_product" @ref="_form">
                <MudCardContent>
                    <MudGrid>
                        <MudItem xs="12" sm="12">
                            <MudTextField @bind-Value="_product.Name" Label="Nome" Required="true"
                                RequiredError="Nome é obrigatório" />
                        </MudItem>
                        <MudItem xs="12" sm="12">
                            <MudNumericField Adornment="Adornment.Start" AdornmentText="R$" @bind-Value="_product.Price"
                                Label="Preço" Format="N2" />
                        </MudItem>
                        <MudItem xs="12" sm="12">
                            <MudNumericField @bind-Value="_product.Stock" Label="Quantidade" Min="0" />
                        </MudItem>
                        <MudItem xs="12" sm="12">
                            <MudTextField @bind-Value="_product.ImageUrl" Label="URL da Imagem" />
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
                <MudCardActions Class="pa-4">
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Variant="Variant.Filled" Color="Color.Error"
                        Size="Size.Large" OnClick="Cancel" Class="ml-auto mr-4" />
                    <MudIconButton Icon="@Icons.Material.Filled.Save" Variant="Variant.Filled" Color="Color.Primary"
                        Size="Size.Large" OnClick="SubmitAsync" />
                </MudCardActions>
            </MudForm>
        </MudCard>
    </MudItem>
</MudGrid>
<MudOverlay Visible="_isLoading" DarkBackground="true" Absolute="true">
    <MudProgressCircular Color="Color.Secondary" Indeterminate="true" />
</MudOverlay>
