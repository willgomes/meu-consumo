@page "/about"
@using Microsoft.Extensions.Localization
@using Resources

@inject IStringLocalizer<Resource> Localizer

<MudGrid Class="px-4 py-4">
    <MudItem xs="12" sm="12" md="12" lg="12" xl="12">
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h6">@Localizer["PrivacyAndPurpose"]</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body1" Class="mb-4">
                    @Localizer["AboutDescription"]
                </MudText>
                <MudText Typo="Typo.body1" Class="mb-4">
                    @Localizer["PrivacyNotice"]
                </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12" lg="12" xl="12" Class="mt-4">
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h6">@Localizer["UseAsApp"]</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body1" Class="mb-4">
                    @Localizer["PwaDescription"]
                </MudText>
                <MudText Typo="Typo.body1" Class="mb-4">
                    @Localizer["InstallationInfo"]
                </MudText>
                <MudText Typo="Typo.body1">
                    @Localizer["InstallInstructions"]
                </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>